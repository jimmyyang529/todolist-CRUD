<h1><%= @category.category_name %>: Item</h1>
<p><%= @category.status %></p>

<%= link_to 'New Item', new_item_path, :class => "btn btn-default btn-sm "  %><br>


<ol>
<% @items.each do |item| %>
	<li>
	  <%= item.title %><br>
	  <%= item.decription %><br>
	  <%= item.due_date %><br>
	  <%= link_to 'show', category_item_path(@category, item), :class => "btn btn-default btn-sm " %> 
	  <%= link_to 'edit', edit_category_item_path(@category, item), :class => "btn btn-default btn-sm " %> 
	  <%= link_to 'destroy', category_item_path(@category, item),
	                            :method => :delete, 
	                            data:{ confirm:"Are you sure?"}, 
	                            :class => "btn btn-warning btn-sm " %>
	</li>
<% end %><br>
<%= link_to 'Back to Category List', categories_url, :class => "btn btn-primary" %></p>
</ol>